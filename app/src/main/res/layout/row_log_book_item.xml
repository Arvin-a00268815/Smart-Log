<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="5dp">


    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardBackgroundColor="#F2F5F7"
                                        android:id="@+id/cardview"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        app:cardCornerRadius="2dp"
                                        app:cardElevation="2dp"
                                        app:cardUseCompatPadding="true">


        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView

                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/logbook_title"
                android:text="Title"
                android:maxLines="1"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:padding="5dp"
                android:textSize="20sp"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/logbook_date"

                  android:layout_below="@+id/logbook_title"
                  android:padding="5dp"
                  android:text="Date"/>


            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:id="@+id/book_more_action_view"
                       android:layout_marginTop="5dp"
                       app:srcCompat="@drawable/ic_baseline_more_vert_24px"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
